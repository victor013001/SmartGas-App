<ServoScreen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            Label:
                text: 'ESTADO DEL SERVO:'
            Label:
                text: root.servoStatus
            GridLayout:
                cols: 1
                Button:
                    text: 'IR A BUZZER'
                    on_press: root.go_to_buzzer()
                Button:
                    text: 'IR A MQ2'
                    on_press: root.go_to_mq2()

<MQ2Screen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            Label:
                text: 'VALOR DEL GAS:'
            Label:
                text: root.gasValue
            GridLayout:
                cols: 1
                Button:
                    text: 'IR A SERVO'
                    on_press: root.go_to_servo()
                Button:
                    text: 'IR A BUZZER'
                    on_press: root.go_to_buzzer()

<BuzzerScreen>:
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            Label:
                text: 'ESTADO DEL BUZZER:'
            Label:
                text: root.buzzerStatus
            Button:
                text: 'APAGAR ALARMA'
                on_press: root.turn_off_buzzer()
            GridLayout:
                cols: 1
                Button:
                    text: 'IR A SERVO'
                    on_press: root.go_to_servo()
                Button:
                    text: 'IR A MQ2'
                    on_press: root.go_to_mq2()

